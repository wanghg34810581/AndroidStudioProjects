    <RelativeLayout
        android:id="@+id/result_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/ok_animation_layout"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/tv_result_title"
            style="@style/MenuButtonDescribe"
            android:text="@string/result_big_safe_info"
            android:textSize="40sp"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_result_description"
            style="@style/MenuButtonDescribe"
            android:text="@string/no_found_danger"
            android:textSize="17sp"
            android:textColor="@color/green"
            android:layout_below="@+id/tv_result_title"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/arrow_animation_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/result_message_layout"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/finish_activity_icon_more"
            android:layout_centerHorizontal="true"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more"
            android:textSize="12sp"
            android:textColor="@color/green"
            android:layout_below="@+id/iv_arrow"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
