<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:stretchColumns="3"
    android:layout_row="2">

    <TableRow
        android:layout_weight="1"
        android:layout_gravity="fill">
        <RelativeLayout
            style="@style/MenuButtonLayout">
            <ImageButton
                android:id="@+id/iv_garbage_clean"
                style="@style/MenuButton_tos"
                android:src="@drawable/home_icon_clear_tos"
                />
            <TextView
                android:id="@+id/tv_garbage_clean"
                style="@style/MenuButtonDescribe"
                android:layout_below="@id/iv_garbage_clean"
                android:text="@string/garbage_clean"
                android:textSize="17sp"
                android:textColor="@color/menuText"
                />
            <View
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:background="@color/divgray"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            style="@style/MenuButtonLayout">
            <ImageButton
                android:id="@+id/iv_virus_scan"
                style="@style/MenuButton_tos"
                android:src="@drawable/home_icon_virus_scan_tos"
                />
            <TextView
                android:id="@+id/tv_virus_scan"
                style="@style/MenuButtonDescribe"
                android:layout_below="@id/iv_virus_scan"
                android:text="@string/virus_scan"
                android:textSize="17sp"
                android:textColor="@color/menuText"
                />
            <View
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:background="@color/divgray"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <RelativeLayout
            style="@style/MenuButtonLayout">
            <ImageButton
                android:id="@+id/iv_flow_monitor"
                style="@style/MenuButton_tos"
                android:src="@drawable/home_icon_flow_monitoring_tos"
                />
            <TextView
                android:id="@+id/tv_flow_monitor"
                style="@style/MenuButtonDescribe"
                android:text="@string/flow_monitor"
                android:layout_below="@id/iv_flow_monitor"
                android:textSize="17sp"
                android:textColor="@color/menuText"
                />
        </RelativeLayout>

    </TableRow>
    <View
        android:layout_height="1dip"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:background="@color/divgray" />

    <TableRow
        android:layout_weight="1"
        android:layout_gravity="fill">
        <RelativeLayout
            style="@style/MenuButtonLayout">
            <ImageButton
                android:id="@+id/iv_permission_manager"
                style="@style/MenuButton_tos"
                android:src="@drawable/home_icon_root_tos"
                />
            <TextView
                android:id="@+id/tv_permission_manager"
                style="@style/MenuButtonDescribe"
                android:layout_below="@id/iv_permission_manager"
                android:text="@string/permission_manager"
                android:textSize="17sp"
                android:textColor="@color/menuText"
                />
            <View
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:background="@color/divgray"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <RelativeLayout
            style="@style/MenuButtonLayout">
            <ImageButton
                android:id="@+id/iv_power_save"
                style="@style/MenuButton_tos"
                android:src="@drawable/home_icon_energy_saving_setting_tos"
                />
            <TextView
                android:id="@+id/tv_power_save"
                style="@style/MenuButtonDescribe"
                android:layout_below="@id/iv_power_save"
                android:text="@string/power_save"
                android:textSize="17sp"
                android:textColor="@color/menuText"
                />
            <View
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:background="@color/divgray"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <RelativeLayout
            style="@style/MenuButtonLayout">
            <ImageButton
                android:id="@+id/iv_firewall"
                style="@style/MenuButton_tos"
                android:src="@drawable/home_icon_msg_intercept_tos"
                />
            <TextView
                android:id="@+id/tv_firewall"
                style="@style/MenuButtonDescribe"
                android:layout_below="@id/iv_firewall"
                android:text="@string/firewall"
                android:textSize="17sp"
                android:textColor="@color/menuText"
                />
        </RelativeLayout>
    </TableRow>
</TableLayout>