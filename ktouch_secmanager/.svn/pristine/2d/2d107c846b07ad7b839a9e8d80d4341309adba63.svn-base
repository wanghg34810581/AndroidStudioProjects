<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:secmanager="http://schemas.android.com/apk/res-auto"
    android:id="@+id/checkup_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- -->
    <RelativeLayout
        android:id="@+id/round_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:layout_alignParentTop="true"
        android:background="@color/checkupgreen"
        >
        <com.guli.secmanager.widget.RoundProgressBarWidthNumber
            android:id="@+id/round_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progress="0"
            android:layout_centerInParent="true"
            secmanager:progress_unreached_bar_height="9dp"
            secmanager:progress_unreached_color="#ff6bc545"
            secmanager:progress_reached_color="#ffd3eec8"
            secmanager:progress_text_color="#ffc51B03"
            secmanager:progress_text_size="20sp"
            secmanager:radius="101dp"
            secmanager:radius_color="#ffd3eec8"
            secmanager:radius_background_color="#ff6bc545"
            secmanager:radius_height="9dp"
            secmanager:outer_circle_radius="108dp"
            secmanager:outer_circle_radius_color="#ffa1da88"
            secmanager:outer_circle_height="1dp"
            secmanager:shadow_radius="98dp"
            secmanager:shadow_color="#ff389a0e"
            secmanager:shadow_height="1dp"/>
        <TextView
            android:id="@+id/tv_info_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:translationY="-12dp"
            android:textSize="17sp"
            android:textColor="#ffb8e7a4"
            android:background="#00000000"
            />
        <TextView
            android:id="@+id/tv_score_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="70sp"
            android:visibility="invisible"
            android:textColor="@color/checkupSubInfo"
            android:background="#00000000"
            />
        <TextView
            android:id="@+id/tv_score_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/tv_score_value"
            android:paddingLeft="5dp"
            android:paddingTop="40dp"
            android:textSize="15sp"
            android:text="@string/unit"
            android:visibility="invisible"
            android:textColor="@color/checkupMainInfo"
            android:background="#00000000"
            />
        <TextView
            android:id="@+id/tv_info_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/tv_info_main_title"
            android:translationY="-12dp"
            android:textSize="30sp"
            android:textColor="#ffd3eec8"
            android:background="#00000000"
            />
        <TextView
            android:id="@+id/tv_checkup_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#ffd3eec8"
            android:layout_below="@id/round_progress_bar"/>
        <TextView
            android:id="@+id/tv_optimize"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="@string/optimize_one_key"
            android:background="@drawable/checkup_selector"
            android:visibility="invisible"
            android:clickable="true"
            android:layout_below="@id/round_progress_bar"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#ff51bb24"
            android:gravity="center"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"/>
        <TextView
            android:id="@+id/tv_checkup_again"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/checkup_selector"
            android:textSize="20sp"
            android:textColor="#ff51bb24"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:gravity="center"
            android:text="@string/checkup_again"
            android:visibility="invisible"
            android:clickable="true"
            android:layout_below="@id/round_progress_bar"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/round_progress_layout"
        android:layout_alignParentBottom="true"
        layout="@layout/menu_fragment_tos"/>
</RelativeLayout>