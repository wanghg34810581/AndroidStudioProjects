<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/score_screen_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/bt_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff51bb24"/>
        <TextView
            android:id="@+id/tv_score_value_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="70sp"
            android:textColor="@color/checkupSubInfo"
            android:background="#00000000" />
        <TextView
            android:id="@+id/tv_score_unit_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/tv_score_value_s"
            android:paddingLeft="5dp"
            android:paddingTop="40dp"
            android:textSize="15sp"
            android:text="@string/unit"
            android:textColor="@color/checkupMainInfo"
            android:background="#00000000"
            />
        <Button
            android:id="@+id/bt_optimize_complete"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_alignParentBottom="true"
            android:text="@string/optimize_complete"
            android:textSize="17sp"
            android:textColor="#000000"
            android:gravity="center"
            android:visibility="invisible"
            />
        <View
            android:id="@+id/vi_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d7d6d9"
            android:layout_above="@id/bt_optimize_complete"
            android:visibility="invisible"/>
        <ListView
            android:id="@+id/lv_checkup_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="134dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="61dp"
            android:visibility="invisible"
            android:divider="#dfdfdf"
            android:dividerHeight="1px"
            />
    </RelativeLayout>
</LinearLayout>