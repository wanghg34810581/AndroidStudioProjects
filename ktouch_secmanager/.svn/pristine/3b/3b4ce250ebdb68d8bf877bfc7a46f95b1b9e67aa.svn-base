<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:stretchColumns="3"
    android:layout_row="1">

    <TableRow
        android:layout_weight="1"
        android:layout_gravity="fill">
        <RelativeLayout
            style="@style/MenuButtonLayout">
            <ImageButton
                android:id="@+id/iv_garbage_clean"
                style="@style/MenuButton"
                android:src="@drawable/home_icon_clear"
                />
            <TextView
                android:id="@+id/tv_garbage_clean"
                style="@style/MenuButtonDescribe"
                android:layout_below="@id/iv_garbage_clean"
                android:text="@string/garbage_clean"
                android:textSize="17sp"
                android:textColor="@color/menuText"
                />
            <View
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:background="@color/divgray"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            style="@style/MenuButtonLayout">
            <ImageButton
                android:id="@+id/iv_virus_scan"
                style="@style/MenuButton"
                android:src="@drawable/home_icon_virus_scan"
                />
            <TextView
                android:id="@+id/tv_virus_scan"
                style="@style/MenuButtonDescribe"
                android:layout_below="@id/iv_virus_scan"
                android:text="@string/virus_scan"
                android:textSize="17sp"
                android:textColor="@color/menuText"
                />
            <View
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:background="@color/divgray"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            style="@style/MenuButtonLayout">
            <ImageButton
                android:id="@+id/iv_flow_monitor"
                style="@style/MenuButton"
                android:src="@drawable/home_icon_flow_monitoring"
                />
            <TextView
                android:id="@+id/tv_flow_monitor"
                style="@style/MenuButtonDescribe"
                android:layout_below="@id/iv_flow_monitor"
                android:text="@string/flow_monitor"
                android:textSize="17sp"
                android:textColor="@color/menuText"
                />
        </RelativeLayout>
    </TableRow>

</TableLayout>