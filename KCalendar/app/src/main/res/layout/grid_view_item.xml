<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/grid_view_item_layout"
    android:gravity="center"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/normal_gap"
    android:paddingTop="@dimen/normal_gap"
    android:background="@drawable/grid_selector">

    <ImageView
        android:id="@+id/grid_view_icon"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/middle_gap"/>

    <TextView
        android:id="@+id/grid_view_text"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/primary_text_black_color"/>

</LinearLayout>