<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    style="@style/CalendarBottomBarStyle">

    <TextView
        android:id="@+id/agenda_list_today"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        style="@style/ToolBarTextViewStyle"
        android:text="@string/today_btn_title"/>


    <TextView
        android:id="@+id/agenda_list_new_agenda"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:onClick="createEvent"
        android:contentDescription="@string/event_create"
        style="@style/ToolBarTextViewStyle"
        android:layout_marginRight="20dp"
        android:text="@string/new_agenda_btn_title"/>
</RelativeLayout>