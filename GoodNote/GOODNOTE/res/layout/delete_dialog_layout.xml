<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="134dp"
    android:background="@color/delete_dialog_bg"
    android:divider="@drawable/dlg_divider"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:showDividers="middle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/delete_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/dialog_info"
            android:textSize="15sp" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="66dp"
            android:layout_height="47dp"
            android:gravity="center"
            android:background="@drawable/dlg_cancel"
            android:layout_alignParentRight="true"
            android:textColor="@color/dialog_cacel"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:text="@string/cancel" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sure_btn"
            android:layout_width="324dp"
            android:layout_height="53dp"
            android:gravity="center"
            android:background="@drawable/dlg_sure"
            android:text="@string/sure_del"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>