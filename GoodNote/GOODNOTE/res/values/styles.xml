<resources>


    <style name="NoteActionbarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>        
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="ActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/gnotes_actionbar_text_color</item>
        <item name="android:textSize">@dimen/ab_title_text_size</item>
    </style>

    <style name="GNotesThemeLight" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/gnotes_actionbar_text_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/NoteActionbarStyle</item>
        <item name="android:actionBarSize">48dp</item>  <!-- TY zhencc modify 20dp to 40dp -->
        <item name="android:homeAsUpIndicator">@drawable/ic_back_dark</item>
    </style>

    <style name="custom_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!-- TY zhencc 20160902 add for PROD104179658 begin -->
    <style name="alert_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
       <item name="android:windowBackground">@color/white_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- TY zhencc 20160902 add for PROD104179658 end -->
</resources>
